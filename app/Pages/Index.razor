@page "/"
@inject IJSRuntime JS

<PageTitle>Index</PageTitle>

<h1>Hello, world!</h1>

Welcome to your new app.

<SurveyPrompt Title="How is Blazor working for you?" />

<div @ref="artCtr" style="height:300px;width:300px;">
    @* Casually CSS Artwork goes here *@
</div>

<button @onclick="onbuttonclick"> Create Swiss Army Knife  </button>

@code{
    ElementReference artCtr;
    private string artName = "swiss";

    async protected void onbuttonclick (MouseEventArgs args)
    {
        await JS.InvokeVoidAsync("create", artCtr, artName);
    }
}